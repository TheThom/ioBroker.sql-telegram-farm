{
	"type": "tabs",
	"i18n": false,
	"tabsStyle": {
		"width": "calc(100% - 100px)"
	},
	"items": {
		"tabDatabase": {
			"type": "panel",
			"label": "MySQL",
			"items": {
				"database.server": {
					"type": "text",
					"label": "Server",
					"maxLength": 15,
					"sm": 2
				},
				"database.port": {
					"type": "number",
					"label": "Port",
					"max": 65535,
					"sm": 2
				},
				"database.database": {
					"type": "text",
					"label": "Database",
					"maxLength": 20,
					"sm": 4
				},
				"database.user": {
					"newLine": true,
					"type": "text",
					"label": "User",
					"maxLength": 20,
					"sm": 4
				},
				"database.password": {
					"type": "password",
					"label": "Password",
					"repeat": true,
					"maxLength": 100,
					"sm": 4
				},
				"database.filepath": {
					"newLine": true,
					"type": "text",
					"label": "Absolute Filepath to FileStorage - Standard IO Broker: /opt/iobroker/iobroker-data/files/sql-telegram-farm.0",
					"maxLength": 200,
					"sm": 4
				},
				"database.intervalEnsureConnection": {
					"type": "number",
					"label": "Time to ensure the database Connection [min] - default 60",
					"min": 1,
					"max": 1500,
					"sm": 4
				}
			}
		},
		"tabTelegramOptions": {
			"type": "panel",
			"label": "Telegram - Options",
			"items": {
				"telegram.instance": {
					"newLine": true,
					"type": "number",
					"label": "Telegram instance",
					"max": 10,
					"sm": 1
				},
				"headerUsers": {
					"newLine": true,
					"type": "header",
					"size": 2,
					"text": "Users"
				},
				"telegram.users": {
					"newLine": true,
					"type": "table",
					"sm": 12,
					"items": [
						{
							"type": "text",
							"width": "40%",
							"title": "Name",
							"attr": "name",
							"filter": false,
							"sort": true,
							"default": "0"
						},
						{
							"type": "checkbox",
							"width": "5%",
							"title": "Admin",
							"attr": "admin",
							"filter": false,
							"sort": true,
							"default": false
						}
					]
				}
			}
		},
		"tabMachines": {
			"type": "panel",
			"label": "Maschinen",
			"items": {
				"machines.maintenanceReminderInterval": {
					"type": "number",
					"label": "Erinnerung f√§llige Wartungen: Alle x Tage",
					"max": 365,
					"min": 0,
					"sm": 2
				},
				"machines.maintenanceReminderHour": {
					"type": "number",
					"label": "Uhrzeit der Erinnerung",
					"sm": 2
				}
			}
		}
	}
}
